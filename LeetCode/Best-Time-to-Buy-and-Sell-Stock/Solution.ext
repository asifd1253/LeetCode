class Solution {
    public int maxProfit(int[] arr) {
        int buyPrice = Integer.MAX_VALUE;
        int maxProfit = 0;

        for(int i=0; i<arr.length; i++){
            if(arr[i] < buyPrice){
                buyPrice = arr[i];
            }else{
                int sell = arr[i] - buyPrice;
                maxProfit = Math.max(maxProfit, sell);
            }

        }

        return maxProfit;
    }
}
